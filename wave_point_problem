#include<iostream>
using namespace std;

void WavePoint(int arr[][3],int r,int c)
{
    for(int j=0;j<c;j++)
    {
        if(j%2==0)
        {
            for(int i=0;i<r;i++)
            cout<<arr[i][j]<<" ";
        }
        else
        {
            for(int i=r-1;i>=0;i--)
            cout<<arr[i][j]<<" ";
        }
        cout<<endl;
    }
}

int main()
{
    int r,c;
    cout<<"enter the num of rows and coloumns"<<endl;
    cin>>r>>c;
    int arr[r][3];
    cout<<"enter the elements"<<endl;
    for(int i=0;i<r;i++)
      {
        for(int j=0;j<c;j++)
        {
            cin>>arr[i][j];
        }
    }

    for(int i=0;i<r;i++)
      {
        for(int j=0;j<c;j++)
        {
            cout<<arr[i][j]<<" ";
        }
        cout<<endl;
    }
    cout<<"wave point:"<<endl;
    
    WavePoint(arr,r,3);
}
